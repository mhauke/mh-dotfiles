[user]
	name = Hannes Bellmer
  email = git@bellmer.org
[core]
	compression = -1
	editor = vim
[color]
	ui = true
[alias]
        lg = log --graph --pretty=format:'%Cred%h%Creset - %C(bold blue)%an - %Cgreen(%cr)%Creset -  %s %Creset - %C(yellow) %D' --abbrev-commit
        cm = commit -m
        ca = commit --amend
        d = diff --color-words
        s = status -s
        a = !git add . && git status
        au = !git add -u . && git status
[merge]
	ff = false
