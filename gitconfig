[user]
	name = Hannes Bellmer
  email = "(none)"
[core]
  excludesfile = ~/.gitignore
	compression = -1
	editor = vim
[color]
	ui = true
  status = auto
  branch = auto
[alias]
        lg = log --color --graph --pretty=format:'%C(red)%h -%C(green)%cr -%C(bold blue) %an -%Creset %s %C(yellow) %C(auto)%d ' --abbrev-commit --branches --tags --date=short
        cm = commit -m
        ca = commit --amend
        d = diff --color-words
        s = status -s
        a = !git add . && git status
        au = !git add -u . && git status
        b = branch -v
        r = remote -v
        t = tag -l
        unstage = reset HEAD
        uncommit = reset --soft HEAD^
        branches = branch -av
        remotes = remote -v
    	pl = pull --rebase
	    ms = merge --squash
[merge]
    ff = false
    summary = true
[gc]
  auto=1
